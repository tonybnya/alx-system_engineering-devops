#!/usr/bin/env bash
# Install Nginx where it should be listening on port 80

# Install Nginx
sudo apt-get update
sudo apt-get install nginx -y

# Configure Nginx to listen on port 80
sudo sed -i "s/listen\s*80;/listen 80 default_server;/g" /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx start

# Create a file containing the string "Hello World!"
echo "Hello World!" | dd status=none of=/var/www/html/index.html

# Test Nginx querying its root with curl
curl http://localhost/
