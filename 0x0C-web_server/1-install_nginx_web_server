#!/usr/bin/env bash
# Install Nginx where it should be listening on port 80

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install nginx -y

# Configure Nginx to listen on port 80
sudo sed -i 's/listen\s*80;/listen 80 default_server;/g' /etc/nginx/sites-available/default

# Restart Nginx
sudo kill "$(cat /var/run/nginx.pid)"
sudo /usr/sbin/nginx

# Create afile containing "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > dev null
