#!/usr/bin/env bash
# Install Nginx where it should be listening on port 80

# Update package list and install Nginx
apt-get update
apt-get install nginx -y

# Configure Nginx to listen on port 80
sed -i "s/listen\s*80;/listen 80 default_server;/g" /etc/nginx/sites-available/default

# Restart Nginx
service nginx start

# Create afile containing "Hello World!"
echo "Hello World!" | tee /var/www/html/index.html > dev null
